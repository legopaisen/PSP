@{
    ViewData["Title"] = "Parameter Settings";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    p{
        font-size: 10px;
    }
    .card-container{
        max-width: 75vw;
    }
</style>
<div class="mb-3">
    <div class="mb-3">
        <h2>Parameter Settings</h2>
    </div>

    <div class="mb-3 card-container">
        <div class="card">
            <div class="card-header">
                File Paths
            </div>
            <div class="card-body">
                <ul class="list-group mb-3">
                    <li class="list-group-item">Archive Path:</li>
                    <li class="list-group-item">Encrypted Path:</li>
                    <li class="list-group-item">File Upload Path:</li>
                    <li class="list-group-item">Logs Path:</li>
                    <li class="list-group-item">Temp Path:</li>
                </ul>
                <a href="#" class="btn btn-primary">Modify</a>
            </div>
        </div>
    </div>
    <div class="mb-3 card-container">
        <div class="card">
            <div class="card-header">
                File Server
            </div>
            <div class="card-body">
                <ul class="list-group mb-3">
                    <li class="list-group-item">SFTP Server:</li>
                    <li class="list-group-item">Port:</li>
                    <li class="list-group-item">User:</li>
                    <li class="list-group-item">Password:</li>
                    <li class="list-group-item">Input Path:</li>
                    <li class="list-group-item">Output Path:</li>
                </ul>
                <a href="#" class="btn btn-primary">Modify</a>
            </div>
        </div>
    </div>
    <div class="mb-3 card-container">
        <div class="card">
            <div class="card-header">
                System Database
            </div>
            <div class="card-body">
                <ul class="list-group mb-3">
                    <li class="list-group-item">IP:</li>
                    <li class="list-group-item">Port:</li>
                    <li class="list-group-item">User:</li>
                    <li class="list-group-item">Password:</li>
                </ul>
                <a href="#" class="btn btn-primary">Modify</a>
            </div>
        </div>
    </div>
</div>